{

  "manifest_version": 2,
  "name": "passiveLanguageReinforcer",
  "version": "1.0",

  "description": "Translates webpage text by identifying known words.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "<all_urls>",
    "tabs",
    "webNavigation",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["translate.js"]
    }
  ]

}
